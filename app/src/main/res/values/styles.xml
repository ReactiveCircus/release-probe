<resources>

    <style name="Theme.RP.Splash" parent="BaseAppTheme">
        <item name="android:statusBarColor">?colorSecondary</item>
        <item name="android:navigationBarColor">?colorPrimary</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Theme.RP.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextAppearanceActive">@style/Theme.RP.BottomNavigationView.TextAppearanceActive</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
    </style>

    <style name="Theme.RP.BottomNavigationView.TextAppearanceActive" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
